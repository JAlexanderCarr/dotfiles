#!/bin/bash
# chezmoi:template:left-delimiter="{{" right-delimiter="}}"
# Install Kubernetes tools - optional, controlled by chezmoi config

{{- if not .packages.kubernetes }}
echo "[K8S] Kubernetes tools installation skipped (disabled in config)"
exit 0
{{- end }}

set -euo pipefail

OS="$(uname -s | tr '[:upper:]' '[:lower:]')"
ARCH="$(uname -m)"

# Normalize architecture
ARCH_STD="$ARCH"
if [[ "$ARCH_STD" == "x86_64" || "$ARCH_STD" == "amd64" ]]; then
    ARCH_STD="amd64"
elif [[ "$ARCH_STD" == "arm64" || "$ARCH_STD" == "aarch64" ]]; then
    ARCH_STD="arm64"
else
    echo "[K8S] Unsupported architecture: $ARCH_STD"
    exit 1
fi

echo "[K8S] Installing Kubernetes tools..."

# Override git to use HTTPS during installation
git() {
    GIT_CONFIG_NOSYSTEM=1 \
    GIT_CONFIG_SYSTEM=/dev/null \
    GIT_CONFIG_GLOBAL=/dev/null \
    command git \
      -c url."https://github.com/".insteadof=ssh://github.com/ \
      -c url."https://github.com/".insteadof=ssh://git@github.com/ \
      -c url."https://github.com/".insteadof=git@github.com: \
      -c url."https://github.com/".insteadof=git://github.com/ \
      "$@"
}
export -f git

if [[ "$OS" == "darwin" ]]; then
    if ! command -v brew >/dev/null; then
        echo "[K8S] Homebrew not found. Installing..."
        /bin/bash -c "$(curl -fsSL https://raw.githubusercontent.com/Homebrew/install/HEAD/install.sh)"
    fi
    brew install kind kubectl kubectx
else
    # Linux: Install from binaries
    
    # Install kind
    echo "[K8S] Installing kind..."
    curl -Lo ./kind "https://kind.sigs.k8s.io/dl/latest/kind-linux-$ARCH_STD"
    chmod +x ./kind
    sudo mv ./kind /usr/local/bin/kind

    # Install kubectl
    echo "[K8S] Installing kubectl..."
    KUBECTL_VERSION="$(curl -L -s https://dl.k8s.io/release/stable.txt)"
    curl -LO "https://dl.k8s.io/release/$KUBECTL_VERSION/bin/linux/$ARCH_STD/kubectl"
    sudo install -o root -g root -m 0755 kubectl /usr/local/bin/kubectl
    sudo /usr/local/bin/kubectl completion bash | sudo tee /etc/bash_completion.d/kubectl > /dev/null
    rm -f kubectl

    # Install kubectx and kubens
    echo "[K8S] Installing kubectx and kubens..."
    sudo rm -rf /opt/kubectx
    sudo rm -f /usr/local/bin/kubectx /usr/local/bin/kubens
    sudo git clone https://github.com/ahmetb/kubectx.git /opt/kubectx
    sudo ln -sf /opt/kubectx/kubectx /usr/local/bin/kubectx
    sudo ln -sf /opt/kubectx/kubens /usr/local/bin/kubens
    sudo ln -sf /opt/kubectx/completion/kubectx.bash /etc/bash_completion.d/kubectx
    sudo ln -sf /opt/kubectx/completion/kubens.bash /etc/bash_completion.d/kubens
fi

echo "[K8S] Kubernetes tools installation complete!"
